<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Topluluk Adı</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/activity">TOPLULUK ADI</a>
                
                <form class="d-none d-lg-flex mx-auto" style="width: 400px;">
                    <input class="form-control me-2 rounded-pill" type="search" placeholder="Kişi, Grup, Forum ara..." aria-label="Search">
                </form>

                <div class="d-flex align-items-center">
                    <ul class="navbar-nav me-3 mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/activity"><i class="fas fa-rss"></i> Akış</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/groups"><i class="fas fa-users"></i> Gruplar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/forums"><i class="fas fa-comments"></i> Forumlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/messages"><i class="fas sent-message"></i> Mesajlar</a>
                        </li>
                    </ul>
                    
                    <a class="btn btn-sm btn-outline-light me-2 rounded-circle" href="/notifications" title="Bildirimler">
                        <i class="fas fa-bell"></i>
                    </a>
                    <div class="dropdown">
                        <a class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/img/john-avatar.jpg" alt="User" width="32" height="32" class="rounded-circle me-1">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="/profile/john">Profilim</a></li>
                            <li><a class="dropdown-item" href="/settings">Ayarlar</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">Çıkış Yap</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content py-4">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; @DateTime.Now.Year - Topluluk Adı
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
@RenderSection("Scripts", required: false)
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</body>
</html>