@model KampMVC.Models.UserProfileViewModel
@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml"; 
}

<div class="container mt-4">
    
    <div class="row">
        <div class="col-12 profile-header bg-white p-0 rounded-3 shadow-sm mb-4">
            
            <div class="cover-photo" style="background-image: url(@Model.CoverPhotoUrl); height: 200px; background-size: cover; background-position: center; border-radius: 12px 12px 0 0;">
                @if (Model.IsCurrentUser)
                {
                    <button class="btn btn-sm btn-light position-absolute top-0 end-0 m-3"><i class="fas fa-camera"></i> Kapak Düzenle</button>
                }
            </div>
            
            <div class="d-flex align-items-end p-3">
                <img src="@Model.AvatarUrl" class="rounded-circle border border-5 border-white shadow-lg" 
                     style="width: 150px; height: 150px; margin-top: -75px; margin-left: 15px; object-fit: cover;" alt="@Model.DisplayName">
                
                <div class="ms-4 mb-2">
                    <h2 class="mb-0 fw-bold">@Model.DisplayName</h2>
                    <p class="text-muted">@Model.ActivityStatus</p>
                </div>

                <div class="ms-auto mb-2">
                    @if (Model.IsCurrentUser)
                    {
                        <a href="/settings" class="btn btn-outline-secondary me-2"><i class="fas fa-cog"></i> Ayarlar</a>
                    }
                    else
                    {
                        <button class="btn btn-primary me-2">
                            @if (Model.IsFollowing)
                            {
                                <i class="fas fa-check">Takibi Bırak</i> 
                            }
                            else
                            {
                                <i class="fas fa-user-plus">Takip Et</i> 
                            }
                        </button>
                        <button class="btn btn-success"><i class="fas fa-envelope"></i> Mesaj Gönder</button>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-pills mb-4 p-2 bg-white rounded-3 shadow-sm">
                <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#activity">Aktivite (@Model.PostCount)</a></li>
                <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#friends">Arkadaşlar (@Model.FriendCount)</a></li>
                <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#groups">Gruplar (@Model.GroupCount)</a></li>
                <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#about">Hakkında</a></li>
            </ul>

            <div class="tab-content mt-4">
                
                <div id="activity" class="tab-pane active">
                    <div class="row">
                        <div class="col-lg-8">
                            @* Yeni paylaşım kutusu sadece kendi profilinde gösterilebilir *@
                            @if (Model.IsCurrentUser)
                            {
                                <div class="card mb-4 shadow-sm border-0">
                                    <div class="card-body"><textarea class="form-control" rows="2" placeholder="Yeni bir şeyler paylaş..."></textarea></div>
                                </div>
                            }
                            
                            @if (Model.ActivityPosts.Any())
                            {
                                @foreach (var post in Model.ActivityPosts)
                                {
                                    <div class="card mb-3 p-3 shadow-sm border-0">
                                        <p class="text-muted small float-end">@post.TimeAgo</p>
                                        <p>@post.Content</p>
                                        </div>
                                }
                            }
                            else
                            {
                                <p class="text-center text-muted">Henüz paylaşım yok.</p>
                            }
                        </div>
                        
                        <div class="col-lg-4">
                            <div class="card p-3 shadow-sm">
                                <h5 class="card-title fw-bold">Hakkında</h5>
                                <p class="small text-muted">Kullanıcı hakkında genel bilgiler, doğum tarihi, meslek vb. buraya gelecek.</p>
                                <ul class="list-unstyled small">
                                    <li><i class="fas fa-map-marker-alt text-primary me-2"></i> Türkiye / İstanbul</li>
                                    <li><i class="fas fa-briefcase text-primary me-2"></i> Yazılım Geliştirici</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="friends" class="tab-pane fade">
                    <div class="row">
                        @foreach (var friend in Model.Friends)
                        {
                            <div class="col-6 col-md-3 col-lg-2 mb-3">
                                <div class="card text-center p-2">
                                    <img src="@friend.AvatarUrl" class="rounded-circle mx-auto mb-2" style="width: 70px; height: 70px;">
                                    <a href="/profile/@friend.Username" class="small fw-bold text-decoration-none">@friend.DisplayName</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
                <div id="groups" class="tab-pane fade">
                    <div class="list-group">
                        @foreach (var group in Model.Groups)
                        {
                            <a href="/groups/@group.Slug" class="list-group-item list-group-item-action d-flex align-items-center mb-2 rounded-3 shadow-sm">
                                <img src="@group.GroupAvatarUrl" class="rounded-circle me-3" style="width: 50px; height: 50px;">
                                <div>
                                    <h6 class="mb-0 fw-bold">@group.GroupName</h6>
                                    <small class="text-muted">Grup Açıklaması...</small>
                                </div>
                                <span class="ms-auto badge bg-secondary">Üye</span>
                            </a>
                        }
                    </div>
                </div>
                
                <div id="about" class="tab-pane fade">
                   <div class="card p-4">
                       <h5>Biyografi</h5>
                       <p>Detaylı biyografi ve kişisel bilgiler.</p>
                   </div>
                </div>

            </div>
        </div>
    </div>
</div>