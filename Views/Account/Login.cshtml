@model KampMVC.Models.LoginViewModel 
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h4 class="text-center mb-4">Hesabına Giriş Yap</h4>

<form asp-controller="Account" asp-action="Login" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input asp-for="Email" class="form-control" placeholder="mail@example.com" required />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Parola</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>
    
    @* <input type="hidden" id="RecaptchaToken" name="RecaptchaToken" /> *@

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-lg mt-3 fw-bold">Giriş Yap</button>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="ForgotPassword" class="small text-decoration-none">Şifremi Unuttum</a>
    </div>
</form>

<hr class="my-4" />

<div class="text-center">
    <p class="small text-muted mb-1">Hesabın yok mu?</p>
    <a asp-action="Register" class="btn btn-outline-secondary w-100">Yeni Hesap Oluştur</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}